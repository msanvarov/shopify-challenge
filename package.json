{
  "name": "the-shoppies",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "SASS_PATH=node_modules:src react-scripts start",
    "build": "SASS_PATH=node_modules:src react-scripts build",
    "lint": "yarn prettier && npm run tslint && npm run stylelint",
    "tslint": "tslint --fix 'src/**/*.{ts,tsx}' --project tsconfig.json",
    "stylelint": "stylelint 'src/**/*.scss' --syntax scss",
    "prettier": "prettier --list-different '**/*.{ts,tsx,js,jsx,json,md}'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-brands-svg-icons": "5.14.0",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@fortawesome/react-fontawesome": "0.1.11",
    "@hookform/resolvers": "0.1.1",
    "axios": "0.20.0",
    "bootstrap": "4.5.2",
    "connected-react-router": "6.8.0",
    "history": "4.10.1",
    "lodash": "4.17.20",
    "node-sass": "4.14.1",
    "react": "16.13.1",
    "react-accessible-accordion": "3.3.3",
    "react-bootstrap": "1.3.0",
    "react-dom": "16.13.1",
    "react-helmet": "6.1.0",
    "react-hook-form": "6.8.1",
    "react-loader-spinner": "3.1.14",
    "react-modal-video": "1.2.5",
    "react-owl-carousel3": "2.2.5",
    "react-redux": "7.2.1",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "react-select": "3.1.0",
    "react-toastify": "6.0.8",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-saga": "1.1.3",
    "typescript": "4.0.2",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@types/brainhubeu__react-carousel": "2.0.0",
    "@types/node": "14.10.1",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-helmet": "6.1.0",
    "@types/react-loader-spinner": "3.1.0",
    "@types/react-redux": "7.1.9",
    "@types/react-router-dom": "5.1.5",
    "@types/react-select": "3.0.20",
    "@types/yup": "0.29.7",
    "husky": "4.3.0",
    "immutable": "4.0.0-rc.12",
    "lint-staged": "10.3.0",
    "prettier": "2.1.1",
    "prop-types": "15.7.2",
    "seamless-immutable": "7.1.4",
    "stylelint": "13.7.1",
    "stylelint-config-recommended": "3.0.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "5.0.0"
  },
  "resolutions": {
    "@types/react": "16.9.35"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "tslint --fix"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "if",
            "else",
            "mixin",
            "each",
            "include",
            "function",
            "return",
            "warn",
            "for"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
